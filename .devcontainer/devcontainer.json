{
  "name": "Flutter + Android API 35",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "workspaceFolder": "/workspace",
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind"
  ],
  "runArgs": [
    "--privileged",
    "-v",
    "/dev/bus/usb:/dev/bus/usb"
  ],
  "remoteUser": "root",
  "initializeCommand": "bash -lc 'sudo bash scripts/setup-udev.sh infra/51-android.rules || true'",
  "customizations": {
    "vscode": {
      "extensions": [
        "Dart-Code.flutter",
        "Dart-Code.dart-code",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "dart.flutterSdkPath": "/usr/lib/flutter",
        "dart.sdkPath": "/usr/lib/flutter/bin/cache/dart-sdk"
      }
    }
  },
  "forwardPorts": [8080, 5037],
  "postCreateCommand": "flutter doctor -v"
}
